@using Empeek.Models

@model IEnumerable<string>

@{
    ViewBag.Title = "Empeek";
}


@section Body{
    <div class="navBar">
    <ul class="nav nav-tabs">
        <li class=" active"><a>HARD DISKS:</a></li>
        @if (ViewBag.DataDisk != null)
    {
        foreach (string item in ViewBag.DataDisk)
        {
                <li>@Html.ActionLink(item, "Index", new { path = item }, null)</li>
            }
        }
    </ul>
</div>

<div class="section panel panel-primary">
    <div class="panel-heading">
        Current path: @if (ViewBag.CountFiles.CurrentPath != null)
        {@ViewBag.CountFiles.CurrentPath}
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>less 10 MB</th><th>more 10 && less 50 MB</th><th>more 50 && less 100 MB</th><th>more 100 MB</th></tr>
            </thead>
            <tbody>
                <tr><td>@ViewBag.CountFiles.Less10Mb</td><td>@ViewBag.CountFiles.More10Less50Mb</td><td>@ViewBag.CountFiles.More50Less100Mb</td><td>@ViewBag.CountFiles.More100Mb</td></tr>
            </tbody>
        </table>
    </div>
</div>


    @if(ViewBag.Exception)
    {
        <div class="alert-danger">@ViewBag.ExceptionMessage</div>
        <script>
            alert(@ViewBag.ExceptionMessage)
            
        </script>
    }
<div class="section panel panel-primary">
    <div class="panel-heading">Name of subDirectories with path</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <tbody>
                @if (ViewBag.Back != null)
                {
                    <tr><td>@Html.ActionLink("back", "Index", new { path = ViewBag.Back }, null)</td></tr>
                }
                

                @if (ViewBag.DataDir != null)
                {
                    foreach (string item in ViewBag.DataDir)
                    {
                        <tr>
                            <td>@Html.ActionLink(item, "Index", new { path = item }, null)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="section panel panel-primary">
    <div class="panel-heading">Name of files</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <tbody>
                @if (ViewBag.DataFile != null)
                {
                    foreach (var item in ViewBag.DataFile)
                    {
                        <tr>
                            <td>@item</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>




}
